@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mt-3 mb-4 text-center">📊 Dashboard Summary</h2>

<div class="row text-center">
    <div class="col-md-3">
        <div class="card shadow-sm p-3 bg-light">
            <h5>Total Products</h5>
            <h3 class="text-primary">@ViewBag.TotalProducts</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm p-3 bg-light">
            <h5>Total Bills</h5>
            <h3 class="text-success">@ViewBag.TotalBills</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm p-3 bg-light">
            <h5>Total Revenue</h5>
            <h3 class="text-warning">₹@ViewBag.TotalRevenue</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm p-3 bg-light">
            <h5>Today's Sales</h5>
            <h3 class="text-danger">₹@ViewBag.TodayRevenue</h3>
        </div>
    </div>
</div>
