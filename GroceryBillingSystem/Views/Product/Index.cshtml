@model IEnumerable<GroceryBillingSystem.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2 class="mt-3">Product List</h2>

<!-- ✅ Success message -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-bordered table-hover mt-4">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Rate (₹)</th>
            <th>Quantity</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Rate</td>
                <td>@product.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-primary me-2">
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@product.ProductId"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this product?');">
                        Remove
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
